{
    "manifest_version": 2,
    "name": "LiveSUB",
    "version": "1.0",
    "description": "Una extensi√≥n que subtitula el audio que se reproduce en el navegador.",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "permissions": [
      "tabs",
      "activeTab",
      "tabCapture"
    ],
    "browser_action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_title": "Subtitulador de audio",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }